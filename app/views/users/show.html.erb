<h3><%=@user.username%></h3>

<h2>Your Joined Tribes </h2>


<%@user.tribes.each do |tribe|%>
  <%=link_to (image_tag (tribe.thumbnail)), tribe_path(tribe) %><br>  
  <%=link_to tribe.name, tribe_path(tribe)%><br>
  
  <%end%>

<br>
<%=button_to "Select My Tribes", '/tribe_select', method: :get%>
<%if @user.admin %>
  <%=button_to "Create A Tribe", new_tribe_path, method: :get%>
<%end%>
<hr>

<h2>My Upcoming Rides</h2>

<%@user.rides.each do |ride|%>
  <%=link_to "#{ride.tribe.name} - #{ride.date.strftime("%A %d %B")} -  
  #{ride.instructor} -  #{ride.time.strftime("%I:%M %p")}  - 
  #{ride.format} -  #{ride.duration} mins", ride_path(ride)%> 
  <%=button_to "Cancel Ride", user_ride_path(ride), method: :delete %></p> <br>
<%end%>

<hr>

<%=button_to "Log Out", logout_path %>

