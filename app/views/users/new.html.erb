
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %> <br>
<br>
  <%= f.label :email %>
  <%= f.email_field :email %> <br>
  <br>

    <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <br>

  <%= f.label :peloton_name %>
  <%= f.text_field :peloton_name %> <br>
  <br>

    <%= f.label :admin %>
  <%= f.check_box :admin %> <br>

  <br>

  <%= f.submit "Signup" %>
<% end %>